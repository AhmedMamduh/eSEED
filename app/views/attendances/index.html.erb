<h1>Listing Attendances</h1>

<table>
  <thead>
    <tr>
      <th>Day</th>
      <th>Working Hours</th>
      <th>Employee</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @attendances.each do |attendance| %>
      <tr>
        <td><%= attendance.day %></td>
        <td><%= attendance.working_hours %></td>
        <td><%= link_to 'Show Employee', attendance.employee %></td>
        <td><%= link_to 'Show Satuts', attendance.status %></td>
        <td><%= link_to 'Show', attendance %></td>
        <td><%= link_to 'Destroy', attendance, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'Add Attendance', new_attendance_path %>
