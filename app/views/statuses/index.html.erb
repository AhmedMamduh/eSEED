<h1>Listing Status</h1>

<table class="table">
  <thead>
    <tr class="items">
      <th>Present</th>
      <th>Absent Hours</th>
      <th>Sick Leave</th>
      <th>Day Off</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @statuses.each do |statuses| %>
      <tr class="items">
        <td><%= statuses.present %></td>
        <td><%= statuses.absent %></td>
        <td><%= statuses.sick_leave %></td>
        <td><%= statuses.day_off %></td>
        <td><%= link_to 'Show', statuses %></td>
        <td><%= link_to 'Destroy', statuses, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'Add Status', new_status_path %>
